@model MyPersonal.App.ViewModels.Index.IndexViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-xl-10 offset-xl-1">
            <div class="row">
                <div class="col-lg-6">
                    <div>
                        <h2>@Model.Name</h2>
                        <p>@Model.Info</p>
                    </div>
                    <div>
                        <h2>General Info</h2>
                        <ul>
                            <li><span>Date of Birth: </span>@Model.DateOfBirth</li>
                            <li><span>Address: </span>@Model.Address</li>
                            <li><span>E-mail: </span>@Model.Email</li>
                            <li><span>Phone: </span>@Model.Phone</li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-6">
                    <figure>
                        <img src="~/images/me.jpg" alt="5" />
                    </figure>
                </div>
            </div>
        </div>
    </div>
</div>