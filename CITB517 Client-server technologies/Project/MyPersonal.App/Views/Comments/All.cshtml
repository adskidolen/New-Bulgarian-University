@model MyPersonal.App.ViewModels.Comments.AllCommentsViewModel

@{
    ViewData["Title"] = "All Comments";
}

<h2 class="text-center">All Comments</h2>
<table class="table-hover table table-striped">
    <tr>
        <th>#</th>
        <th>From</th>
        <th>Comment</th>
        <th>Date</th>
    </tr>
    @{
        int index = 1;
    }
    @foreach (var comment in Model.Comments)
    {
        <tr>
            <td>@(index++)</td>
            <td>@comment.User</td>
            <td>@comment.Comment</td>
            <td>@comment.Date</td>
        </tr>
    }
</table>