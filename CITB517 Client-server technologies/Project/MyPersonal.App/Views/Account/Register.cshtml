@model MyPersonal.App.ViewModels.Users.RegisterInputModel

@{
    ViewData["Title"] = "Register";
}

<h2 class="text-center">Register</h2>
<hr />
<div class="container-fluid d-flex justify-content-center">
    <div class="row">
        <form asp-controller="Account" asp-action="Register">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <div class="d-flex justify-content-center">
                    <label asp-for="Username" class="font-weight-bold control-label"></label>
                </div>
                <input asp-for="Username" class="form-control" placeholder="pesho123" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="d-flex justify-content-center">
                    <label asp-for="Email" class="control-label font-weight-bold"></label>
                </div>
                <input asp-for="Email" class="form-control" placeholder="pesho@@mail.bg" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="d-flex justify-content-center">
                    <label asp-for="FullName" class="control-label font-weight-bold"></label>
                </div>
                <input asp-for="FullName" class="form-control" placeholder="Pesho Peshov" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="d-flex justify-content-center">
                    <label asp-for="Password" class="control-label font-weight-bold"></label>
                </div>
                <input asp-for="Password" class="form-control" placeholder="123456" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="d-flex justify-content-center">
                    <label asp-for="ConfirmPassword" class="control-label font-weight-bold"></label>
                </div>
                <input asp-for="ConfirmPassword" class="form-control" placeholder="123456" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="d-flex justify-content-center">
                <div class="form-group">
                    <input type="submit" value="Register" class="btn btn-default bg-dark text-light" />
                </div>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Home" asp-action="Index">Back to Home Page</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
