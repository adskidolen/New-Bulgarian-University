@model MyPersonal.App.ViewModels.Users.LoginInputModel

@{
    ViewData["Title"] = "Login";
}

<h2 class="text-center">Login</h2>
<hr />
<div class="container-fluid d-flex justify-content-center">
    <form class="mx-auto half-width" asp-controller="Account" asp-action="Login">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <div class="d-flex justify-content-center">
                <label class="control-label font-weight-bold" asp-for="Username"></label>
            </div>
            <input asp-for="Username" class="form-control" placeholder="pesho123" />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="d-flex justify-content-center">
                <label class="control-label font-weight-bold" asp-for="Password"></label>
            </div>
            <input asp-for="Password" class="form-control" placeholder="123456" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="checkbox">
                <div class="d-flex justify-content-center">
                    <label class="control-label font-weight-bold">
                        <input asp-for="RememberMe" /> @Html.DisplayNameFor(model => model.RememberMe)
                    </label>
                </div>
            </div>
        </div>
        <div class="d-flex justify-content-center">
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-default  bg-dark text-light" />
            </div>
        </div>
    </form>
</div>

<div>
    <a class="nav-link" asp-controller="Home" asp-action="Index">Back to Home Page</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
